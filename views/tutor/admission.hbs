    <script>
        let cropData;
        let popUpUpload = async function () {
            const { value: file } = await swal.fire({
                title: 'upload Image',
                input: 'file',
                inputAttributes: {
                    'accept': 'image/*',
                    'aria-label': 'Upload your profile picture'
                },
                showCancelButton: true,
                confirmButtonText: 'UPLOAD',
                preConfirm: () => {
                    setTimeout(initCrop, 1000);
                }
            })
            if (file) {
                readURL(file)
            }
        }

        var cropper;

        function readURL(input) {
            if (input) {
                var reader = new FileReader();
                reader.onload = function (e) {
                    $('#blah').attr('src', e.target.result)
                };
                reader.readAsDataURL(input);
                swal.fire({
                    title: 'crop',
                    html: "<div class='cropper__div'><img id='blah' id='cropping__area' src='#' alt='your image' /></div>",
                    showCancelButton: true,
                    confirmButtonText: 'CROP',
                    showLoaderOnConfirm: true,
                    allowOutsideClick: false,
                    preConfirm: () => {
                        var imgurl = cropper.getCroppedCanvas().toDataURL()
                        console.log(imgurl)
                        Swal.fire({
                            title: 'Cropped!',
                            text: 'Student Profile Picture',
                            imageUrl: imgurl,
                            imageWidth: 400,
                            imageHeight: 400,
                            imageAlt: 'Cropped Image',
                        })
                        var img = document.createElement("img");
                        img.src = imgurl;
                        document.getElementById("cropped_result").appendChild(img);
                        console.log(cropData)
                    }
                })
            }
        }








        function initCrop() {
            console.log('intiCrop')
            var image = document.getElementById('blah');
            cropper = new Cropper(image, {
                aspectRatio: 1 / 1,
                viewMode: 2,
                dragMode: 'move',
                allowOutsideClick: false,
                crop: function (e) {
                    cropData = e.detail
                    console.log(e.detail.y);
                }
            });
        }




