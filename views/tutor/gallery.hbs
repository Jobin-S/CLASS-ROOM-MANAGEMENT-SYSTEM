<div class="dashboard-content-one">
    <!-- Breadcubs Area Start Here -->
    <div class="breadcrumbs-area">
        <h3>{{title}}</h3>
        <ul>
            <li>
                <a href="/tutor/dashboard">Home</a>
            </li>
            <li>Gallery</li>
        </ul>
    </div>
    <!-- Breadcubs Area End Here -->
    <div class="row">
        <!-- Add Notice Area Start Here -->
        <div class="col-4-xxxl col-12">
            <div class="card height-auto">
                <div class="card-body">
                    <div class="heading-layout1">
                        <div class="item-title">
                            <h3>{{title}}</h3>
                        </div>

                    </div>
                    <form class="new-added-form">
                        <div class="row">
                            <div class="col-12-xxxl col-lg-6 col-12 form-group">
                                <label>Title</label>
                                <input type="text" name="title" id="title" placeholder="" class="form-control">
                            </div>

                            <div class="col-xl-3 col-lg-6 col-12 form-group">
                                <label>Image</label>
                                <input type="file" name="img" id="img" placeholder="" accept="image/*"
                                    class="form-control">
                            </div>

                            <div class="progress-outer text-center col-md-10" id="progressContainer"
                                style="display: none;">
                                <div class="progress">
                                    <div class="progress-bar progress-bar-striped progress-bar-info" id="progress"
                                        style="width:0;">
                                    </div>
                                </div>
                            </div>

                            <div class="col-12 form-group mg-t-8">

                                <button type="reset" class="btn-fill-lg bg-blue-dark btn-hover-yellow">Reset</button>
                                <a onclick="submit()"
                                    class="btn-fill-lg btn-gradient-yellow btn-hover-bluedark">Save</a>
                            </div>
                            <div class="table-responsive">
                                <table class="table display data-table text-nowrap">
                                    <thead>
                                        <tr>
                                            <th>
                                                <div class="form-check">
                                                    <input type="checkbox" class="form-check-input checkAll">
                                                    <label class="form-check-label">No</label>
                                                </div>
                                            </th>
                                            <th>Title</th>
                                            <th>image</th>

                                            <th></th>
                                        </tr>
                                    </thead>
                                    <tbody>
                                        {{#each galleryItems}}
                                        <tr>
                                            <td>
                                                <div class="form-check">
                                                    <input type="checkbox" class="form-check-input">
                                                    <label class="form-check-label">{{@key}}</label>
                                                </div>
                                            </td>
                                            <td class="text-center"><img src="/uploads/gallery/{{file}}" height="10%" alt="student">
                                            </td>
                                            <td>{{title}}</td>
                                            <td>
                                                <div class="dropdown">
                                                    <a href="#" class="dropdown-toggle" data-toggle="dropdown"
                                                        aria-expanded="false">
                                                        <span class="flaticon-more-button-of-three-dots"></span>
                                                    </a>
                                                    <div class="dropdown-menu dropdown-menu-right">
                                                        <a class="dropdown-item" href="#"
                                                            onclick="deleteGallery('{{_id}}', '{{title}}')"><i
                                                                class="fas fa-times text-orange-red"></i>Delete</a>


                                                    </div>
                                                </div>
                                            </td>
                                        </tr>
                                        {{/each}}

                                    </tbody>
                                </table>
                            </div>
                    </form>

                </div>
            </div>
        </div>

    </div>
    <script src="https://cdn.jsdelivr.net/npm/sweetalert2@10.12.0/dist/sweetalert2.all.min.js"></script>
    <script>
        var submit = function () {
            console.log('called')
            let title = document.getElementById('title').value


            var formData = new FormData();

            var img = document.getElementById('img').files[0];


            formData.append('title', title)
            formData.append('img', img)

            var xhr = new XMLHttpRequest();
            let progress = document.getElementById('progress')
            document.getElementById('progressContainer').style.display = 'block'

            // your url upload
            xhr.open('post', '/tutor/gallery', true);


            xhr.upload.onprogress = function (e) {
                if (e.lengthComputable) {
                    var percentage = (e.loaded / e.total) * 100;
                    console.log(percentage + "%");
                    progress.style.width = percentage + '%'
                    if (percentage == 100) {

                        Swal.fire(
                            'Uploaded!',
                            'Announcement uploaded succesfully',
                            'success'
                        ).then(() => {

                            location.href = '/tutor/gallery'
                        })

                    }
                }
            };

            xhr.onerror = function (e) {
                console.log('Error');
                console.log(e);
            };
            xhr.onload = function () {
                console.log(this.statusText);
            };

            xhr.send(formData);


        }

    const deleteGallery = function(id, name){
        Swal.fire({
                title: 'Are you sure?',
                text: `${name} will be deleted from Gallery.`,
                icon: 'warning',
                showCancelButton: true,
                confirmButtonColor: '#3085d6',
                cancelButtonColor: '#d33',
                confirmButtonText: 'Yes, delete it!'
            }).then((result) => {
                if (result.isConfirmed) {
                    $.ajax({
                        url: `/tutor/gallery/delete`,
                        method: 'post',
                        data: { id: id },
                        success: (response) => {
                            if (response.status) {
                                Swal.fire({
                                    icon: 'success',
                                    title: 'Deleted Image',
                                    text: `${name} is deleted!`
                                })
                                location.reload()
                            }
                            
                        }
                    })

                }
            })
    }

    </script>